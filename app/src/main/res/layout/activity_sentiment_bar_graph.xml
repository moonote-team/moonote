<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditEntryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bargraph_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MooNote.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/bargraph_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.MooNote.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/sentiment_bargraph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bargraph_appbar"
        android:layout_weight="1">

    </com.github.mikephil.charting.charts.BarChart>
</LinearLayout>
